local clicked = false
LinkBtn.MouseButton1Click:Connect(function()
    if setclipboard then
        setclipboard("https://discord.gg/VpZGQnY54")
        LinkBtn.Text = "ƒê√£ Copy Link!"
    else
        LinkBtn.Text = "H√£y ch·ª•p m√†n h√¨nh link"
    end
    task.wait(1.5)
    clicked = true
end)

-- Ch·ªù ng∆∞·ªùi d√πng nh·∫•n ho·∫∑c t·ª± ƒë√≥ng sau 6 gi√¢y
local count = 0
while not clicked and count < 6 do
    task.wait(1)
    count = count + 1
end

-- D·ªçn d·∫πp Intro
